class RuleLoadManager {
  constructor() {
    this.cache = {
      core: new Map(),
      modes: new Map(),
      levels: new Map(),
      specialized: new Map()
    };
  }

  async initializeMode(mode, complexityLevel) {
    // –ó–∞–≥—Ä—É–∑–∫–∞ –æ—Å–Ω–æ–≤–Ω—ã—Ö –ø—Ä–∞–≤–∏–ª
    await this.loadCoreRules();
    
    // –ó–∞–≥—Ä—É–∑–∫–∞ –ø—Ä–∞–≤–∏–ª, —Å–ø–µ—Ü–∏—Ñ–∏—á–Ω—ã—Ö –¥–ª—è —Ä–µ–∂–∏–º–∞
    await this.loadModeRules(mode);
    
    // –ó–∞–≥—Ä—É–∑–∫–∞ –ø—Ä–∞–≤–∏–ª —É—Ä–æ–≤–Ω—è —Å–ª–æ–∂–Ω–æ—Å—Ç–∏
    await this.loadLevelRules(complexityLevel);
    
    // –†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è –æ—Ç–ª–æ–∂–µ–Ω–Ω—ã—Ö –∑–∞–≥—Ä—É–∑—á–∏–∫–æ–≤
    this.registerLazyLoaders(mode);
  }

  async loadCoreRules() {
    const coreRules = [
      'main.mdc',
      'platform-awareness.mdc',
      'file-verification.mdc'
    ];
    
    for (const rule of coreRules) {
      if (!this.cache.core.has(rule)) {
        const content = await this.loadRuleFromFile(rule);
        this.cache.core.set(rule, content);
      }
    }
  }

  async loadModeRules(mode) {
    const modeRules = this.getModeRules(mode);
    for (const rule of modeRules) {
      if (!this.cache.modes.has(rule)) {
        const content = await this.loadRuleFromFile(rule);
        this.cache.modes.set(rule, content);
      }
    }
  }

  async loadLevelRules(level) {
    const levelRules = this.getLevelRules(level);
    for (const rule of levelRules) {
      if (!this.cache.levels.has(rule)) {
        const content = await this.loadRuleFromFile(rule);
        this.cache.levels.set(rule, content);
      }
    }
  }

  registerLazyLoaders(mode) {
    const specializedRules = this.getSpecializedRules(mode);
    for (const rule of specializedRules) {
      this.cache.specialized.set(rule, () => this.loadRuleFromFile(rule));
    }
  }

  async loadSpecializedRule(rule) {
    if (this.cache.specialized.has(rule)) {
      const loader = this.cache.specialized.get(rule);
      const content = await loader();
      this.cache.specialized.set(rule, content);
      return content;
    }
  }
}
```

