{
  "date_range": {
    "start_date": "2025-07-28",
    "end_date": "2025-08-11",
    "mode": "range"
  },
  "processing": {
    "skip_processed": true,
    "force_reprocess": false,
    "max_parallel": 3
  },
  "output": {
    "save_extracted_texts": true,
    "generate_html_reports": true,
    "save_combined_texts": true
  },
  "chunking": {
    "use_token_based": true,
    "max_tokens_per_chunk": 4000,
    "overlap_tokens": 400,
    "max_chunks_per_text": 30,
    "encoding_model": "cl100k_base",
    "auto_adjust_chunk_size": true,
    "min_chunk_size": 1500,
    "max_chunk_size": 8000,
    "very_large_text_threshold": 250000,
    "very_large_max_tokens_per_chunk": 6000,
    "very_large_overlap_tokens": 600,
    "very_large_max_chunks": 50,
    "memory_optimization": true,
    "progressive_chunking": true,
    "smart_boundary_detection": true,
    "chunk_alert_threshold": 20,
    "chunk_abort_threshold": 50,
    "allow_chunk_abort": true,
    "enable_async_processing": true,
    "max_concurrent_chunks": 3,
    "api_rate_limit_delay": 1.0
  }
}
